# ==================== 服务器配置 ====================
SERVER_HOST=0.0.0.0
SERVER_PORT=38181

# 外部访问域名（用于生成正确的URL）
EXTERNAL_DOMAIN=ticketradar.izlx.me
# 是否使用HTTPS（Cloudflare处理HTTPS，后端使用HTTP）
USE_HTTPS=false

# ==================== 应用配置 ====================
# Flask应用密钥（生产环境请使用强随机字符串）
SECRET_KEY=docker-ticketradar-super-secret-key-change-this-in-production

# 数据库配置
DATABASE_URL=sqlite:///data/ticketradar.db

# ==================== PushPlus推送配置 ====================
# 是否启用PushPlus推送
ENABLE_PUSHPLUS=false
# PushPlus令牌（从 http://www.pushplus.plus/ 获取）
PUSHPLUS_TOKEN=

# ==================== 监控配置 ====================
# 价格阈值（低于此价格时推送通知）
PRICE_THRESHOLD=1000
# 检查间隔（分钟）
CHECK_INTERVAL=5
# 默认出发地
DEFAULT_DEPARTURE=HKG

# ==================== 行程配置 ====================
# 行程类型（1=单程，2=往返）
TRIP_TYPE=2
# 出发日期
DEPART_DATE=2025-09-30
# 返程日期（往返行程时使用）
RETURN_DATE=2025-10-08

# ==================== 高级配置 ====================
# 日志级别
LOG_LEVEL=INFO
# 最大重试次数
MAX_RETRIES=3
# 请求超时时间（秒）
REQUEST_TIMEOUT=30

# ==================== Docker特定配置 ====================
# 容器时区
TZ=Asia/Shanghai
# Python环境
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1
