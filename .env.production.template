# ==================== 生产环境配置模板 ====================
# 复制此文件为 .env.production 并修改相应配置

# ==================== 服务器配置 ====================
SERVER_HOST=0.0.0.0
SERVER_PORT=38181

# 外部访问域名（修改为您的域名）
EXTERNAL_DOMAIN=ticketradar.izlx.me
# 是否使用HTTPS（Cloudflare处理HTTPS，后端使用HTTP）
USE_HTTPS=false

# ==================== 应用配置 ====================
# Flask应用密钥（生产环境请修改为强随机字符串）
SECRET_KEY=CHANGE-THIS-TO-A-STRONG-RANDOM-SECRET-KEY

# 数据库配置
DATABASE_URL=sqlite:///ticketradar.db

# ==================== PushPlus推送配置 ====================
# 是否启用PushPlus推送
ENABLE_PUSHPLUS=true
# PushPlus令牌（从 http://www.pushplus.plus/ 获取）
PUSHPLUS_TOKEN=YOUR-PUSHPLUS-TOKEN-HERE

# PushPlus群组推送配置（可选）
PUSHPLUS_TOPIC_HKG=
PUSHPLUS_TOPIC_SZX=
PUSHPLUS_TOPIC_CAN=
PUSHPLUS_TOPIC_MFM=

# ==================== 监控配置 ====================
# 价格阈值（低于此价格时推送通知）
PRICE_THRESHOLD=1000
# 主循环检查间隔（分钟）
CHECK_INTERVAL=5
# 用户监控任务检查间隔（分钟）
USER_MONITOR_INTERVAL=7
# 默认出发地
DEFAULT_DEPARTURE=HKG

# ==================== 行程配置 ====================
# 行程类型（1=单程，2=往返）
TRIP_TYPE=2
# 出发日期（格式：YYYY-MM-DD）
DEPART_DATE=2025-09-30
# 返程日期（格式：YYYY-MM-DD）
RETURN_DATE=2025-10-08

# ==================== API配置 ====================
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36
ACCEPT_LANGUAGE=zh-CN,zh;q=0.9,en;q=0.8
REQUEST_TIMEOUT=30
MAX_RETRIES=3
REQUEST_DELAY=2

# ==================== 数据处理配置 ====================
MAX_FLIGHTS_PER_REQUEST=50
DATA_CACHE_DURATION=10
ENABLE_DEDUPLICATION=true

# ==================== 通知配置 ====================
NOTIFICATION_COOLDOWN=60
ENABLE_PRICE_CHANGE_NOTIFICATION=true
PRICE_CHANGE_THRESHOLD=100

# ==================== 安全配置 ====================
# 生产环境请设为false
DEBUG=false
VERBOSE_LOGGING=false
SESSION_TIMEOUT=24

# ==================== 高级配置 ====================
LOG_LEVEL=INFO
LOG_MAX_SIZE=10
LOG_BACKUP_COUNT=5

# ==================== Docker特定配置 ====================
TZ=Asia/Shanghai
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# ==================== 监控城市配置 ====================
MAIN_MONITOR_CITIES=HKG,SZX,CAN,MFM
ENABLE_ALL_CITIES_MONITOR=true

# ==================== 性能配置 ====================
CONCURRENT_REQUESTS=4
DB_POOL_SIZE=10
ENABLE_CACHE=true
